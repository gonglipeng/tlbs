<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:gravity="center_vertical"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/listview_icon_width"
        android:layout_height="@dimen/listview_icon_height"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="@dimen/listview_icon_margin"
        android:layout_marginRight="@dimen/listview_icon_margin"
        android:layout_marginBottom="@dimen/listview_icon_margin"
        android:id="@+id/iv_my_friend_friend_icon"

         />

    <TextView
        style="@style/context_text"
        android:id="@+id/tv_my_friend_friend_friendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="friendName" />

</LinearLayout>
