        android:id="@+id/btn_my_friend_more_addFriend_saoyisao"
        android:background="@drawable/title_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫一扫添加" />
    <Button
        android:id="@+id/btn_my_friend_more_addFriend_tongxubo"
        android:background="@drawable/title_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
